@model ML.Materia
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>
<h2 class="text-center">Registo y Actualizacion de Materias</h2>
<br />
<br />
<span>Llene los campos correspondientes para registrar o actualizar el información de la Materia</span>
<hr />
<span>Información Básica</span>
@using (Html.BeginForm("Form", "Materia", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => Model.IdMateria)
    <div class="row row-cols-2">
        <div class="col-lg-6">
            @Html.LabelFor(model => Model.Nombre)
            @Html.TextBoxFor(model => Model.Nombre, new { @class = "form-control" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(model => Model.Costo)
            @Html.TextBoxFor(model => Model.Costo, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-success">Agregar Alumno</button>
    <a class="btn btn-danger" href="@Url.Action("GetAllAlumno", "Alumno")"> Regresar a la Lista</a>
}

